  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.18.0",
    "chai": "^3.5.0",
    "cz-conventional-changelog": "^1.2.0",
    "husky": "^0.11.9",
    "mocha": "^3.2.0",
    "semantic-release": "^6.3.2",
